<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.Pages.Settings"
             BackgroundImageSource="main_background.png">
    <VerticalStackLayout>
        <Button
            Text="СОХРАНИТЬ ДАННЫЕ"
            FontFamily="Impact"
            CornerRadius="15"
            Margin="20, 5"
            FontSize="20"
            TextColor="#0d4853"
            BackgroundColor="White"
            Clicked="SaveData"/>

        <Button
            Text="ЗАГРУЗИТЬ ДАННЫЕ"
            FontFamily="Impact"
            CornerRadius="15"
            Margin="20, 5"
            FontSize="20"
            TextColor="#0d4853"
            BackgroundColor="White"
            Clicked="LoadData"/>
    </VerticalStackLayout>
</ContentPage>