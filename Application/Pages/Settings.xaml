<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.Pages.Settings"
             BackgroundImageSource="main_background.png">
    <Grid RowDefinitions="Auto, Auto">
        <Label x:Name="SpeedLabel"
               Text="Скорость робота: 70"
               HorizontalOptions="Center"
               FontSize="26"
               FontFamily="Impact"
               TextColor="White"
               Margin="20, 10">
        </Label>
        <Button 
            x:Name="EditSpeed"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            CornerRadius="15"
            Margin="20, 0, 20, 20"
            Background="White"
            Text="ИЗМЕНИТЬ СКОРОСТЬ"
            TextColor="#0d4853"
            FontFamily="Impact"
            FontSize="28"
            Padding="5"
            Clicked="EditSpeed_Clicked"/>  
    </Grid>
</ContentPage>