<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.Pages.SimplePages.ControllingPage"
             BackgroundImageSource="main_background.png">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto"
      ColumnDefinitions=".5*, .5*">

        <Image 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Source="controling_image.png"
            Margin="0,0,0,0"
            Scale="0.9">
        </Image>

        <Button 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            ImageSource="arrow_up"
            Background="Transparent"
            Clicked="Forward_button"
            Margin="0, 0, 0, -20"/>

        <Button 
            Grid.Row="2"
            Grid.ColumnSpan="1"
            ImageSource="arrow_left"
            Background="Transparent"
            Margin="0, 0, 0, -20"/>

        <Button 
            Grid.Row="2"
            Grid.Column="2"
            ImageSource="arrow_right"
            Background="Transparent"
            Margin="0, 0, 0, -20"/>

        <Button 
            Grid.Row="3"
            Grid.ColumnSpan="2"
            ImageSource="arrow_down"
            Background="Transparent"
            />



    </Grid>
</ContentPage>