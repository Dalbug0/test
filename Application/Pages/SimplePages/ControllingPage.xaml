<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.Pages.SimplePages.ControllingPage"
             BackgroundImageSource="main_background.png">

    <Grid RowDefinitions="Auto, Auto, Auto">

        <Image Source="ContollingLabel.png">

        </Image>

        <Button 
        Grid.Row="0"
        Grid.ColumnSpan="2"
        CornerRadius="15"
        Margin="20, 20"
        Background="White"
        Text="Вперёд"
        TextColor="#0d4853"
        FontFamily="Impact"
        FontSize="28"
        Padding="5"
        Clicked="Forward_button"/>

        <Button 
        Grid.Row="1"
        Grid.ColumnSpan="2"
        CornerRadius="15"
        Margin="20, 20"
        Background="White"
        Text="Назад"
        TextColor="#0d4853"
        FontFamily="Impact"
        FontSize="28"
        Padding="5"
        Clicked="Back_button"
        />
    </Grid>
</ContentPage>