                    FontSize="40"
                    FontFamily="Impact" 
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="10, 0"/>
            </Grid>

        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="2"
            StrokeShape="RoundRectangle 15"
            BackgroundColor="White"
            StrokeThickness="0"
            Margin="0, 20, 20, 20">
            <Button Text="РУЧНОЕ           &#10;УПРАВЛЕНИЕ"
                LineBreakMode="WordWrap"
                FontSize="33"
                FontFamily="Impact"
                TextColor="#0d4853"
                BackgroundColor="White"
                ImageSource="joystick.png"
                ContentLayout="Top, -60"
                VerticalOptions="End"
                HorizontalOptions="Start"
                TranslationY="10">
            </Button>
        </Border>

        <Button 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            CornerRadius="15"
            Margin="20, 0"
            Background="White"
            Text="СКАНИРОВАТЬ"
            TextColor="#0d4853"
            FontFamily="Impact"
            FontSize="33"
            ImageSource="play.png"
            ContentLayout="Right, 110"
            Padding="1"/>

