    <Grid 
        RowDefinitions="Auto, Auto"
        ColumnDefinitions=".4*, .5*">

        <Border
            Grid.Row="0"
            Grid.ColumnSpan="1"
            StrokeShape="RoundRectangle 15"
            BackgroundColor="White"
            StrokeThickness="0"
            Margin="20">
            <Grid>
                <Image 
